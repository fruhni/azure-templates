{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope"
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard"
        },
        "tier": {
            "type": "string",
            "defaultValue": "Regional"
        },
        "subnetId": {
            "type": "string"
        },
        "addIP": {
            "type": "string"
        },
        "probePort": {
            "type": "string"
        },
        "addprobePort": {
            "type": "string"
        },
        "resourceGroup": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2021-05-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "SAP",
                        "properties": {
                            "privateIPAddress": "[parameters('clusterIP')]",
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            }
                        }
                    },
                    {
                        "name": "ADD",
                        "properties": {
                            "privateIPAddress": "[parameters('addIP')]",
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[concat(parameters('name'), '_pool')]"
                    }
                ],
                "probes": [
                    {
                        "name": "[concat(parameters('name'), '_LB_SAP_Probe')]",
                        "properties": {
                            "protocol": "Tcp",
                            "port": "[parameters('probePort')]",
                            "requestPath": null,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 1
                        }
                    },
                    {
                        "name": "[concat(parameters('name'), '_LB_ADD_Probe')]",
                        "properties": {
                            "protocol": "Tcp",
                            "port": "[parameters('addprobePort')]",
                            "requestPath": null,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 1
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "[concat(parameters('name'), '_LB_rule')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/frontendIPConfigurations/SAP)]"
                            },
                            "frontendPort": 0,
                            "backendPort": 0,
                            "enableFloatingIP": true,
                            "idleTimeoutInMinutes": 30,
                            "protocol": "All",
                            "loadDistribution": "Default",
                            "probe": {
                                "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/probes/',parameters('name'), '_LB_SAP_Probe')]"
                            },
                            "disableOutboundSnat": true,
                            "enableTcpReset": false,
                            "backendAddressPools": [
                                {
                                    "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/backendAddressPools/',parameters('name'), '_pool')]"
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(parameters('name'), '_ADD_rule')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/frontendIPConfigurations/ADD)]"
                            },
                            "frontendPort": 0,
                            "backendPort": 0,
                            "enableFloatingIP": true,
                            "idleTimeoutInMinutes": 30,
                            "protocol": "All",
                            "loadDistribution": "Default",
                            "probe": {
                                "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/probes/',parameters('name'), '_LB_ADD_Probe')]"
                            },
                            "disableOutboundSnat": true,
                            "enableTcpReset": false,
                            "backendAddressPools": [
                                {
                                    "id": "[concat('/subscriptions/2e3da591-1da8-437b-8c2e-81565bd2cfa4/resourceGroups/',parameters('resourceGroup'),'/providers/Microsoft.Network/loadBalancers/',parameters('name'),'/backendAddressPools/',parameters('name'), '_pool')]"
                                }
                            ]
                        }
                    }
                ],
                "inboundNatRules": [],
                "outboundRules": []
            },
            "sku": {
                "name": "[parameters('sku')]",
                "tier": "[parameters('tier')]"
            }
        }
    ]
}
