{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "cseExtPublisher": {
            "type": "string"
        },
        "cseExtType": {
            "type": "string"
        },
        "cseExtName": {
            "type": "string"
        },
        "cseExtVersion": {
            "type": "string"
        },
        "customData": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ],
            "defaultValue": "Linux"
        },
        "adminUsername": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
            "description": "Username for the Virtual Machine."
          }
        },
        "adminPassword": {
          "type": "securestring",
          "defaultValue": "",
          "metadata": {
            "description": "Password for the Virtual Machine."
          }
        },
        "shareUsername": {
          "type": "securestring",
          "defaultValue": "",
          "metadata": {
            "description": "Username to mount share."
          }
        },
        "sharePassword": {
          "type": "securestring",
          "defaultValue": "",
          "metadata": {
            "description": "Password to mount share."
          }
        }
    },
    "variables": {
        "commands": {
            "Windows": "[concat('net use \\\\tesioqaccount.file.core.windows.net\\oqshare', parameters('sharePassword'), ' /USER:', parameters('shareUsername'), ' & \\\\tesioqaccount.file.core.windows.net\\oqshare\\oq\\scripts\\install_TESI.bat ', parameters('adminPassword'), parameters('adminUsername'), ' '' ')]",
            "Linux": "[concat('echo \"', parameters('customData'), '\" | base64 --decode | sh')]"
        }

    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'), '/', parameters('cseExtName'))]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "[parameters('cseExtPublisher')]",
                "type": "[parameters('cseExtType')]",
                "typeHandlerVersion": "[parameters('cseExtVersion')]",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    
                },
                "protectedSettings": {
                    "commandToExecute": "[variables('commands')[parameters('osType')]]"
                }
            }
        }
    ]
}