{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "osType": {
      "type": "string",
      "allowedValues": [
        "Windows Server 2012 Datacenter",
        "Windows Server 2012 R2 Datacenter",
        "Windows Server 2016 Datacenter",
        "Windows Server 2019 Datacenter",
        "Windows Server 2022 Datacenter",
        "Windows Server 2022 Azure",
        "Windows Server 2022 Hotpatch",
        "Windows Server 2022 SQL",
        "Windows Server 2025 Datacenter",
        "Windows Server 2025 Azure",
        "Windows Server 2025 Hotpatch",
        "Windows Server 2025 SQL",
        "SLES 12",
        "SLES 15",
        "RHEL 7",
        "Oracle Linux 7"
      ],
      "defaultValue": "Windows Server 2016 Datacenter",
      "metadata": {
        "description": "The type of the operating system you want to deploy."
      }
    },
    "dbtype": {
      "type": "string",
      "allowedValues": [
        "SQL",
        "HANA",
        "other"
      ],
      "defaultValue": "other",
      "metadata": {
        "description": "The type of the database"
      }
    },
    "sapSystemSize": {
      "type": "string",
      "allowedValues": [
        "Demo",
        "Small < 2.000 SAPS",
        "Medium < 9.000 SAPS",
        "Large < 18.000 SAPS",
        "X-Large < 40.000 SAPS"
      ],
      "defaultValue": "Demo",
      "metadata": {
        "description": "The size of the SAP System you want to deploy."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Type of authentication to use on the Virtual Machine."
      }
    },
    "adminPasswordOrKey": {
      "type": "securestring",
      "metadata": {
        "description": "Password or ssh key for the Virtual Machine."
      }
    },
    "vmName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The name of the VM you want to deploy."
      }
    },
    "storage": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "StandardSSD_LRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage type for the disks"
      }
    },
    "IPAddress": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The private IP of the VM you want to deploy."
      }
    },
    "subnetId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The id of the subnet you want to use."
      }
    },
    "vnetId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The id of the vnet you want to use."
      }
    },
    "availabilityZone": {
      "type": "int",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 3,
      "metadata": {
        "description": "Zone number. Set to 0 if you do not want to use Availability Zones"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "collation": {
      "type": "string",
      "defaultValue": "SQL_Latin1_General_CP850_BIN2"
    },
    "maxdop": {
      "type": "int",
      "defaultValue": 0
    },
    "ShutDown": {
      "type": "string",
      "defaultValue": "Enabled"
    },
    "ShutDownTime": {
      "type": "string",
      "defaultValue": "0000"
    },
    "sizeSAPDrive": {
      "type": "int",
      "defaultValue": 50
    },
    "sizeSQLDrive": {
      "type": "int",
      "defaultValue": 512
    },
    "sqlAutopatching": {
      "type": "bool",
      "defaultValue": false
    },
    "sqlAutopatchingDayOfWeek": {
      "type": "string",
      "defaultValue": "Sunday"
    },
    "sqlAutopatchingStartHour": {
      "type": "string",
      "defaultValue": "12"
    },
    "sqlAutopatchingWindowDuration": {
      "type": "string",
      "defaultValue": "60"
    },
    "retryCount": {
      "type": "int",
      "defaultValue": 3
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/sap-2-tier-marketplace-image-md/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    }
  },
